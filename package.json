{
  "private": true,
  "name": "devvit-backend",
  "version": "0.0.0",
  "license": "BSD-3-Clause",
  "type": "module",
  "scripts": {
    "build:webview": "cd src/webview && VITE_RUN_MOCKS=false vite build",
    "check": "npm run type-check && npm run lint",
    "deploy:dev": "npm run build:webview && devvit upload --config devvit.dev.yaml --copy-paste",
    "deploy:prod": "npm run build:webview && devvit upload --config devvit.prod.yaml --copy-paste",
    "dev": "npm run dev:bolt",
    "dev:bolt": "cd src/webview && VITE_RUN_MOCKS=true vite",
    "dev:devvit": "devvit playtest YOUR_SUBREDDIT --config devvit.dev.yaml",
    "dev:webview": "cd src/webview && VITE_RUN_MOCKS=true vite build",
    "lint": "eslint ./src",
    "lint:fix": "eslint --fix ./src",
    "login": "devvit login --copy-paste",
    "playtest": "concurrently -p \"[{name}]\" -n \"BOLT,DEVVIT,GAME\" -c \"blue,green,magenta\" \"npm run dev:bolt\" \"npm run dev:devvit\" \"npm run dev:webview\" --restart-tries 10",
    "prettier": "prettier-package-json --write ./package.json && prettier --write .",
    "type-check": "tsc --build"
  },
  "dependencies": {
    "@devvit/payments": "0.11.13-next-2025-04-08-50cb5d39d.0",
    "@devvit/public-api": "0.11.13-next-2025-04-08-50cb5d39d.0",
    "devvit": "0.11.13-next-2025-04-08-50cb5d39d.0",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@eslint/js": "9.23.0",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.18",
    "concurrently": "9.1.2",
    "eslint": "9.23.0",
    "eslint-plugin-react": "^7.37.4",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.15.0",
    "postcss": "^8.4.35",
    "prettier": "3.5.3",
    "prettier-package-json": "2.8.0",
    "prettier-plugin-tailwindcss": "0.6.11",
    "tailwindcss": "^3.4.1",
    "typescript": "5.8.2",
    "typescript-eslint": "8.29.0",
    "vite": "^6.2.4",
    "vitest": "^3.1.1"
  }
}
